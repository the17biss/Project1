@model Category

<form method="post">
    <input asp-for="CategoryId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <label> Category Name </label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <label> Number of Items </label>
            <input asp-for="NumberOfItems" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control" style="width:150px">Delete</button>

            </div>
            <div class="col-6">
                <a a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">
                    Back To List
                </a>
            </div>
        </div>

    </div>
</form>
